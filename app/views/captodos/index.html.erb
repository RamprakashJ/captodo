<h1>Listing captodos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @captodos.each do |captodo| %>
      <tr>
        <td><%= captodo.name %></td>
        <td><%= captodo.finished %></td>
        <td><%= link_to 'Show', captodo %></td>
        <td><%= link_to 'Edit', edit_captodo_path(captodo) %></td>
        <td><%= link_to 'Destroy', captodo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Captodo', new_captodo_path %>
